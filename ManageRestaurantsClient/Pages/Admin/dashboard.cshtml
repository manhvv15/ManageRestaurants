@page
@model ManageRestaurantsClient.Pages.Admin.dashboardModel
@{
    ViewData["Title"] = "Dashboard";
    bool isAuthenticated = Request.Cookies.ContainsKey("AuthToken");
}       
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Statistics Chart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        #myPieChart {
            max-width: 500px;
            max-height: 500px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <canvas id="myPieChart"></canvas>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('myPieChart');

            if (ctx) {
                const context = ctx.getContext('2d');

                // Lấy dữ liệu từ backend và lưu vào localStorage
                const data = {
                    today: {
                        new: 2,
                        pending: 4,
                        cancelled: 3,
                        completed: 11
                    },
                    lastWeek: {
                        new: 100,
                        pending: 0,
                        cancelled: 1,
                        completed: 2
                    },
                    lastMonth: {
                        new: 0,
                        pending: 0,
                        cancelled: 1,
                        completed: 2
                    }
                };

                // Save data to localStorage
                localStorage.setItem('bookingStatistics', JSON.stringify(data));

                // Retrieve data from localStorage
                const storedData = JSON.parse(localStorage.getItem('bookingStatistics'));

                const chartData = {
                    labels: ['New', 'Pending', 'Cancelled', 'Completed'],
                    datasets: [{
                        data: [storedData.today.new, storedData.today.pending, storedData.today.cancelled, storedData.today.completed],
                        backgroundColor: ['#36A2EB', '#FFCE56', '#FF6384', '#4BC0C0']
                    }]
                };

                const myPieChart = new Chart(context, {
                    type: 'pie',
                    data: chartData,
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function (tooltipItem) {
                                        const label = tooltipItem.label || '';
                                        const value = tooltipItem.raw || 0;
                                        return `${label}: ${value}`;
                                    }
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>
